# vim:ft=gitconfig:
[core]
  #pager = delta

[interactive]
  diffFilter = delta --dark --color-only

[delta]
  navigate = true
  light = false;
  features = side-by-side line-numbers decorations

[merge]
  conflictstyle = zdiff3

[diff]
  colorMoved = default
  colorMovedWS = allow-indentation-change
