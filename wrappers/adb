#!/bin/bash

ADB_BIN=$(which adb)

if [[ ! -x $ADB_BIN ]];then
  echo "$ADB_BIN is not exist"
  exit -1
fi

if [[ -v SSH_CLIENT ]];then
  HOST_IP=${SSH_CLIENT%% *}
  if nc -zw1 $HOST_IP 5037 2>&1 >/dev/null  ;then
    # Host opened 5037 port
    ADB_HOST="-H $HOST_IP"
    echo -e "Remote ADB server : \033[91;1m$HOST_IP\033[0m" 1>&2
  else
    echo "Host $HOST_IP is not offering adb-server"
    exit -1
  fi
fi

case ${1} in
  logcat)
    # Append color option only when STDOUT(1) is not redirected
    [[ -t 1 ]] && ADDITIONAL_OPTIONS="-v color"
    ;;
  tap)
    for elem in "${@#$1}";do
      [[ -z $elem ]] && continue;
      declare coords=$($ADB_BIN shell "uiautomator dump >/dev/null && cat /sdcard/window_dump.xml" | xmllint --xpath "translate(substring-before(substring-after(//node[@text='$elem']/@bounds, '['), ']'), ',', ' ')" -);
      exec $ADB_BIN $ADB_HOST shell input $1 $ADDITIONAL_OPTIONS $coords
    done
    exit;;
esac

exec $ADB_BIN $ADB_HOST $1 $ADDITIONAL_OPTIONS ${@#$1}
